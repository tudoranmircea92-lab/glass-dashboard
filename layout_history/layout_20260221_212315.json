{
  "version": 1,
  "app_title": "Glass Coating Industrial AI Dashboard",
  "dataset": {
    "file": "db2026.02.19.parquet",
    "date_column": "data"
  },
  "global": {
    "default_rows": 50000,
    "default_sample_mode": "head"
  },
  "tabs": [
    {
      "name": "Overview",
      "mode": "custom",
      "filters": [
        "product",
        "date"
      ],
      "panels": [
        {
          "type": "kpis",
          "title": "Quick KPIs",
          "metrics": [
            "thickness_mm",
            "glassThickness_mm",
            "actProcessSpeed_mm",
            "c27.actVacuumPressure",
            "c27.actVoltage",
            "L_ABS_mean",
            "RT_T_mean"
          ]
        },
        {
          "type": "chart",
          "title": "Thickness vs Process Speed",
          "chart_type": "scatter",
          "x": "actProcessSpeed_mm",
          "y": "thickness_mm",
          "color": "product"
        },
        {
          "type": "timeseries",
          "title": "Optical Mean Over Time",
          "date": "data",
          "y": "L_T_mean",
          "group": "product",
          "agg": "mean",
          "rolling": 7
        }
      ]
    },
    {
      "name": "Plasma Stability Professional",
      "mode": "plasma",
      "filters": [
        "product",
        "date"
      ],
      "panels": [
        {
          "type": "plasma_stability",
          "title": "Cathode Instability (Top 10)"
        }
      ]
    },
    {
      "name": "Color & Optics",
      "mode": "custom",
      "filters": [
        "product",
        "date"
      ],
      "panels": [
        {
          "type": "distribution",
          "title": "L_ABS Distribution",
          "col": "L_ABS_mean"
        },
        {
          "type": "distribution",
          "title": "a_ABS Distribution",
          "col": "a_ABS_mean"
        },
        {
          "type": "distribution",
          "title": "b_ABS Distribution",
          "col": "b_ABS_mean"
        },
        {
          "type": "groupby",
          "title": "Optics by Product (mean)",
          "group_cols": [
            "product"
          ],
          "metrics": [
            "L_ABS_mean",
            "L_RF_mean",
            "L_RG_mean",
            "L_T_mean"
          ],
          "agg": "mean"
        }
      ]
    },
    {
      "name": "Process Diagnostics",
      "mode": "custom",
      "filters": [
        "product",
        "date"
      ],
      "panels": [
        {
          "type": "chart_builder",
          "title": "Interactive Chart Builder"
        },
        {
          "type": "correlation",
          "title": "Correlation Heatmap (numeric)"
        }
      ]
    },
    {
      "name": "Advanced",
      "mode": "custom",
      "filters": [
        "product",
        "date"
      ],
      "panels": [
        {
          "type": "pca",
          "title": "PCA (numeric)"
        },
        {
          "type": "anomaly",
          "title": "Anomaly Detection (IsolationForest)"
        }
      ]
    }
  ]
}